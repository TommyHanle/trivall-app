<%- include('../partials/header') %>

<h2>Edit Trip</h2>

<form action="/trips/<%= trip._id %>?_method=PUT" method="POST" id="trip-forms">
  <div class="form-group">
  <label>Title:
  <input type="text" name="title" value="<%= trip.title %>">
  </label><br>
  </div>
  <div class="form-group">
  <label>Start Date:
  <input type="text" name="startDate" value="<%= trip.startDate %>">
  </label><br>
  </div>
  <div class="form-group">
  <label>End Date:
  <input type="text" name="endDate" value="<%= trip.endDate %>">
  </label><br>
  </div>
  <div class="form-group">
  <label>Location:
  <input type="text" name="location" value="<%= trip.location %>">
  </label><br>
  </div>
  <div class="form-group">
  <label>Description:
  <textarea name="description"><%= trip.description %></textarea>
  </label><br>
  </div>
  <input type="submit" value="Update">
</form>

<%- include('../partials/footer') %>